                  { key: 'low', label: 'Low energy', emoji: 'ðŸŒ™' },
                  { key: 'medium', label: 'Getting by', emoji: 'â˜€ï¸' },
                  { key: 'high', label: 'Feeling good', emoji: 'â­' }
                ].map(({ key, label, emoji }) => (
